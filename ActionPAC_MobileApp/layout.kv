<TermButton>:
    Button:
        text: "Terms"
        on_press: root.openPopup()

<P>:
    Button:
        text: "Pre Paid"
        id: prePaid
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}
    Button:
        text: "Due Now"
        id: dueNow
        on_press: root.btnDueNow
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":0.6}

    Button:
        text: "PO"
        id: PO
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":0.2}



<TextPopup>:
    text: txtipt.text
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: txtipt
        Button:
            text: "OK"
            on_release: root.setText()
            on_release: root.dismiss()
