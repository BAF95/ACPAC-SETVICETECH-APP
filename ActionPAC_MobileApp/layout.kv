#:import Factory kivy.factory.Factory

# instantiates window manager and screens. if a new window is added it must be included here
WindowManager:
    MainWindow:
    FirstWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:
    SixthWindow:


# main window
<MainWindow>:
    name: "Main Menu"
    GridLayout:
# adds logo to the main menu
        cols:1
        Image:
            source: "logo.png"
# adds 3 buttons to the page for directing
        GridLayout:
            cols:3
            canvas.before:
                Color:
                    rgba: 0, 0, 0, .9  # Black
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                size_hint: (0.1,None)
                height: 500
                text: ""
            Label:
                size_hint: (0.1,None)
                height: 500
                text: ""
            Label:
                size_hint: (0.1,None)
                height: 500
                text: ""
            Button:
                text:"File a Report"
                background_color: (0,1,0,.7)
                font_size: 40
                size_hint: (0.1,None)
                height: 200

                on_release:

                    root.manager.transition.direction = "left"
                    app.root.current = "service report"
            Button:
                text:"Take Photos"
                size_hint: (0.1,None)
                background_color: (0,1,0,.7)
                font_size: 40
                height: 200
                disabled: True
                on_release:
                    root.manager.transition.direction = "left"
                    app.root.current = "service report"
            Button:
                text:"Review a \n Report"
                font_size: 40
                size_hint: (0.1,None)
                background_color: (0,1,0,.7)
                disabled: True
                height: 200
                on_release:
                    root.manager.transition.direction = "left"
                    app.root.current = "service report"




