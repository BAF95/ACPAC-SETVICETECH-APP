<Display>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Button:
                text: 'One'
                on_release: sm.current = 'screen_one'  #<<<<<<<<<<<<<<<<
            Button:
                text: 'Two'
                on_release: sm.current = 'screen_two'  #<<<<<<<<<<<<<<<<

        ScreenManager:
            id: sm
            Screen_One:
            Screen_Two:

<MyGrid>:
    GridLayout:
        cols:1
        size: root.width, root.height-50
        Image:
            source:"logo.png"

        GridLayout:
            cols:2
            canvas.before:
                Color:
                    rgba: 0, 1, 0, .5  # red
                Rectangle:
                    pos: self.pos
                    size: self.size


            Label:
                bcolor: 0,1,0,.5
                text: "Customer Name:"
                id: Customer

            TextInput:
                multiline:False

            Label:
                text: "Address:"
                id: address
            TextInput:
                multiline:False

            Label:
                text: "Date:"
                id: date
            TextInput:
                multiline:False

            Label:
                text: "Email:"
                id: email
            TextInput:
                multiline:False

            Label:
                text: "Contact Name:"
                id: contactName
            TextInput:
                multiline:False

            Label:
                text: "Prepaid Terms: "
            CheckBox:
                group: "Terms"
                id: "PrePaidCheck"
                on_active: root.checkbox_click(self, self.active, "Pre Paid")
            Label:
                text: "Due Now Terms: "
            CheckBox:
                group: "Terms"
                id: "DueNowCheck"
                on_active: root.checkbox_click(self, self.active, "Due Now")
            Label:
                text: "PO Terms: "
            CheckBox:
                group: "Terms"
                id: 'POCheck'
                on_active: root.checkbox_click(self, self.active, "PO")
            Label:
                text: "Terms: "
            Label:
                id: termInput
                text:""
            Label:
                text:"PO Box:"
            TextInput
                id:POBoxInput
            Label:
                text:"Description of Problem:"
            TextInput:
                multiline : True
                id:ProblemDescription
            Label:
                text:"Service Performed:"
            TextInput:
                multiline: True
                id: ServiceDescription









        Button:
            text:"Next"

<Screen_Two>:
    name: 'screen_two'      #<<<<<<<<<<<<<<<<
    Button:
        text: 'Two'

<TermButton>:
    Button:
        text: "Terms"
        on_press: root.openPopup()

<P>:
    Button:
        text: "Pre Paid"
        id: prePaid
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}
    Button:
        text: "Due Now"
        id: dueNow
        on_press: root.btnDueNow
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":0.6}

    Button:
        text: "PO"
        id: PO
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":0.2}



<TextPopup>:
    text: txtipt.text
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: txtipt
        Button:
            text: "OK"
            on_release: root.setText()
            on_release: root.dismiss()
