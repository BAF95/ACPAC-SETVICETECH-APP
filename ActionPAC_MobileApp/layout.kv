WindowManager:
    MainWindow:
    FirstWindow:
    SecondWindow:
    ThirdWindow:



<MainWindow>:
    name: "Main Menu"
    GridLayout:

        cols:1
        Image:
            source: "logo.png"

        GridLayout:
            cols:3
            Button:
                text:"File a Report"
                size_hint: 0.2,0.2
                on_release:
                    root.manager.transition.direction = "left"
                    app.root.current = "service report"
            Button:
                text:"Take Photos"
                size_hint: 0.2,0.2
                on_release:
                    root.manager.transition.direction = "left"
                    app.root.current = "service report"
            Button:
                text:"Review a Report"
                size_hint: 0.2,0.2
                on_release:
                    root.manager.transition.direction = "left"
                    app.root.current = "service report"




<FirstWindow>:
    name: "service report"
    GridLayout:
        cols:1
        size: root.width, root.height-25



        GridLayout:
            cols:2
            canvas.before:
                Color:
                    rgba: 0, 1, 0, .3  # red
                Rectangle:
                    pos: self.pos
                    size: self.size


            Label:
                bcolor: 0,1,0,.5
                text: "Customer Name:"
                id: Customer

            TextInput:
                multiline:False

            Label:
                text: "Address:"
                id: address
            TextInput:
                multiline:False

            Label:
                text: "Date:"
                id: date
            TextInput:
                multiline:False

            Label:
                text: "Email:"
                id: email
            TextInput:
                multiline:False

            Label:
                text: "Contact Name:"
                id: contactName
            TextInput:
                multiline:False

            Label:
                text: "Prepaid Terms: "
            CheckBox:
                group: "Terms"
                id: "PrePaidCheck"
                on_active: root.checkbox_click(self, self.active, "Pre Paid")
            Label:
                text: "Due Now Terms: "
            CheckBox:
                group: "Terms"
                id: "DueNowCheck"
                on_active: root.checkbox_click(self, self.active, "Due Now")
            Label:
                text: "PO Terms: "
            CheckBox:
                group: "Terms"
                id: 'POCheck'
                on_active: root.checkbox_click(self, self.active, "PO")
            Label:
                text: "Terms: "
            Label:
                id: termInput
                text:""
            Label:
                text:"PO Box:"
            TextInput
                id:POBoxInput
            Label:
                text:"Description of Problem:"
            TextInput:
                multiline : True
                id:ProblemDescription
            Label:
                text:"Service Performed:"
            TextInput:
                multiline: True
                id: ServiceDescription
        GridLayout:
            size_hint: 0.2,0.2
            cols:2
            Button:
                text:"Back to Menu"
                size_hint: 0.1,0.1
                on_release:
                    root.manager.transition.direction = "right"
                    app.root.current = "Main Menu"


            Button:
                text:"Next"
                size_hint: 0.1,0.1
                on_release:

                    root.manager.transition.direction = "left"
                    app.root.current = "Parts"

